<section class="max-w-xs justify-between items-center md:max-w-lg lg:max-w-2xl xl:max-w-3xl 2xl:max-w-6xl mx-auto mb-20">
  <article>
    <div id="banner" class="flex flex-col gap-2 items-center mt-20">
      <h1 class="text-5xl text-amber-500 uppercase font-bold text-center tracking-wide">toshi</h1>
      <p class="mt-4 font-semibold text-center text-amber-950">Lorem ipsum dolor sit amet consectetur adipisicing elit. Inventore repellendus hic cum! Totam velit veniam assumenda perferendis quas, est unde?</p>
      <a class="mt-3 border border-orange-950 bg-orange-200 px-3 py-1 rounded-lg text-lg font-bold drop-shadow-md" href="/satoshi">Conocer Equipo</a>
      <div class="mt-20 relative flex flex-col items-center w-full">
        <p class="absolute top-0">Ver vivos!</p>      
        <a class="mt-6 hover:translate-y-1 transition-all duration-300 ease-in-out" href="#streamersLive" title="Ver vivos"><i class="fa-solid fa-angles-down"></i></a>
      </div>
    </div>
    <div class="pt-10" id="streamersLive">
      <h2 class="text-2xl text-amber-950 uppercase font-bold mb-2">En vivo</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 items-center flex-col gap-5">
        <% if (locals.data.length > 0) { %>
        <% locals.data.forEach(el => { %>
          <div class="border border-amber-950 bg-orange-200 shadow-md hover:shadow-lg">
            <figure>
              <img class="w-full" loading="lazy" src="<%= el.image %>" alt="<%= el.user %>_image">
            </figure>
            <div class="flex flex-col gap-2 p-2">
              <h2 class="text-2xl text-center font-bold text-orange-500"><%= el.user %></h2>
              <p class="text-lg font-semibold text-amber-950"><%= el.game %></p>
              <div class="flex justify-between items-center">
                <div class="flex gap-2 items-center border border-red-800 bg-red-700 px-2 py-1">
                  <i class="fa-regular fa-user text-red-500"></i>
                  <span><%= el.viewers %></span>
                </div>
                <a class="border border-amber-950 px-2 py-1 hover:bg-orange-400" target="_blank" href="https://www.twitch.tv/<%= el.user %>">Ver Vivo</a>
              </div>
            </div>
          </div>
        <% }) %>
        <% } else { %>
          <p>No se encontraron datos de streams</p>
        <% } %>
      </div>
    </div>
  </article>
</section>
